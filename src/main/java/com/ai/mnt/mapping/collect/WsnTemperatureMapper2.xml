<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ai.mnt.persistence.collect.WsnTemperatureMapper2">

    <resultMap id="WsnTemperatureResultMap" type="com.ai.mnt.model.sensor.WsnTemperature">
        <id column="id" property="id" />
        <result column="ware_id" property="wareId" />
        <result column="obj_id" property="objId" />
        <result column="temperature_value" property="temperatureValue" />
        <result column="rate" property="rate" />
        <result column="state" property="state" />
        <result column="create_time" property="createTime" />
        <result column="field" property="field" />
    </resultMap>

    <sql id="WsnTemperatureColumns">
        ware_id,
        obj_id,
        temperature_value,
        rate,
        state,
        create_time,
        field,
        id
    </sql>
    
    <select id="calAvg"  resultType="java.lang.Float" >
        select
        round(avg(temperature_value),2) as avg 
        from wsn_temperature
        <where>
        	<if test="wareId != null and wareId != ''">
                ware_id = #{wareId}
            </if>
            <if test="bDate != null">
                <![CDATA[and (create_time >= #{bDate})]]>
            </if>
            <if test="eDate != null">
                <![CDATA[and (create_time <= #{eDate})]]>
            </if>
        </where>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into wsn_temperature (
        ware_id,
        obj_id,
        temperature_value,
        rate,
        state,
        create_time,
        field
        )
        values (
        #{wareId},
        #{objId},
        #{temperatureValue},
        #{rate},
        #{state},
        #{createTime},
        #{field}
        )
    </insert>

    <insert id="saveAll">
        insert into wsn_temperature (
        ware_id,
        obj_id,
        temperature_value,
        rate,
        state,
        create_time,
        field,
        )
        values
        <foreach item="item" collection="list" separator=",">
            (
            #{item.wareId},
            #{item.objId},
            #{item.temperatureValue},
            #{item.rate},
            #{item.state},
            #{item.createTime},
            #{item.field},
            )
        </foreach>
    </insert>

    <delete id="deleteByPrimaryKey">
        delete from wsn_temperature
        where
        id = #{id}
    </delete>

    <delete id="deleteList">
        delete from wsn_temperature
        where id in
        <foreach item="item" collection="list" separator="," open="(" close=")">
            #{item}
        </foreach>
    </delete>

    <update id="updateByPrimaryKey">
        update wsn_temperature
        <set>
            <if test="wareId != null">
                ware_id = #{wareId},
            </if>
            <if test="objId != null">
                obj_id = #{objId},
            </if>
            <if test="temperatureValue != null">
                temperature_value = #{temperatureValue},
            </if>
            <if test="rate != null">
                rate = #{rate},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="field != null">
                field = #{field},
            </if>
        </set>
        where
        id = #{id}
    </update>

    <select id="findByPrimaryKey" resultMap="WsnTemperatureResultMap">
        select
        <include refid="WsnTemperatureColumns" />
        from wsn_temperature
        where id = #{id}
    </select>
    
    <select id="findNew" resultType="java.lang.String">
        select
        temperature_value
        from wsn_temperature
        where ware_id = #{wareId}
        ORDER BY create_time DESC LIMIT 1
    </select>


    <select id="findList1" resultMap="WsnTemperatureResultMap">
        select
        
        <include refid="WsnTemperatureColumns" />
        
        from wsn_temperature
        <where>
            <if test="wareId != null and wareId != ''">
                ware_id = #{wareId}
            </if>
            <if test="bDate != null">
                <![CDATA[and (create_time >= #{bDate})]]>
            </if>
            <if test="eDate != null">
                <![CDATA[and (create_time <= #{eDate})]]>
            </if>
        </where>
    </select>

    <select id="findAll" resultMap="WsnTemperatureResultMap">
        select
        <include refid="WsnTemperatureColumns" />
        from wsn_temperature
    </select>
    
    <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>
    
</mapper>